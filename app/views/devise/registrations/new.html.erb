<style>
body {font-family: Arial, Helvetica, sans-serif;}
* {box-sizing: border-box;}

.input-container {
    display: -ms-flexbox; /* IE10 */
    display: flex;
    width: 100%;
    margin-bottom: 15px;
}

.icon {
    padding: 10px;
    background: dodgerblue;
    color: white;
    min-width: 50px;
    text-align: center;
}

.input-field {
    width: 100%;
    padding: 10px;
    outline: none;
}

.input-field:focus {
    border: 2px solid dodgerblue;
}

/* Set a style for the submit button */
.btn-submit {
    background-color: dodgerblue;
    color: white;
    padding: 15px 20px;
    border: none;
    cursor: pointer;
    width: 100%;
    opacity: 0.9;
}

.main{width: 100%;}

.btn-submit:hover {
    opacity: 1;
}

.signup{
  margin-left: 25%;
  margin-right: 25%;
}

.logout-input{
  width: 100%;
}
</style>
<div class="signup">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-container">
    <i class="fa fa-user icon"></i>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "logout-input", placeholder: "email address" %>
  </div>

  <div class="input-container">
    <i class="fa fa-key icon"></i>
    <%= f.password_field :password, autocomplete: "off", :class => "logout-input", placeholder: "password" %><br/>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="input-container">
    <i class="fa fa-key icon"></i>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "logout-input", placeholder: "confirm password" %>
  </div>

    <%= f.submit "Sign up", :class => "btn-submit" %>
<% end %>
</div>
<%#= render "devise/shared/links" %>
